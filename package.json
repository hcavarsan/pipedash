{
  "name": "pipedash",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "build:analyze": "ANALYZE=true bun run build",
    "dev": "vite",
    "lint": "eslint . --fix && cargo clippy --workspace --all-targets --all-features -- -D warnings",
    "preview": "vite preview",
    "taze": "taze major -I",
    "taze:minor": "taze minor -w",
    "bump:patch": "cd hacks/&& cargo run --bin bump_version patch",
    "bump:minor": "cd hacks/&& cargo run --bin bump_version minor",
    "bump:major": "cd hacks/&& cargo run --bin bump_version major",
    "check": "bun run check",
    "format": "eslint . --fix && rustup run nightly cargo fmt",
    "format:front": "eslint . --fix",
    "generate-icons": "cargo run --bin generate_icons",
    "lint:front": "eslint . --fix",
    "lint:back": "cargo clippy --workspace --all-targets --all-features -- -D warnings",
    "precommit": "bun run format && bun run lint",
    "release:minor": "cargo run --bin bump_version minor && git add . && git commit -m 'chore: release new version'",
    "release:patch": "cargo run --bin bump_version patch && git add . && git commit -m 'chore: release new version'",
    "tauri": "tauri"
  },
  "dependencies": {
    "@codecov/vite-plugin": "^1.9.1",
    "@eslint/compat": "^1.4.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@mantine/core": "^8.3.6",
    "@mantine/hooks": "^8.3.6",
    "@mantine/modals": "^8.3.6",
    "@mantine/notifications": "^8.3.6",
    "@rollup/plugin-terser": "^0.4.4",
    "@tabler/icons-react": "^3.35.0",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-opener": "^2.5.2",
    "@tauri-apps/plugin-os": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react-swc": "^4.2.0",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "knip": "^5.66.4",
    "mantine-datatable": "^8.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "taze": "^19.9.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.12"
  }
}
